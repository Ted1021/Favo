<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCremeWhite"
    android:elevation="0dp"
    tools:context="taewon.navercorp.integratedsns.login.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@color/colorCremeWhite"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_fb_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/button_google_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_facebook_button"
            android:drawableLeft="@drawable/com_facebook_button_icon"
            android:elevation="0dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Connect to Facebook"
            android:textColor="@color/colorCremeWhite" />

        <Button
            android:id="@+id/button_google_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/button_tumblr_login"
            android:layout_alignStart="@+id/button_fb_login"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_google_button"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Connect to Google"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/button_tumblr_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button_google_login"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_pinterest_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Connect to Pinterest"
            android:textColor="@color/colorCremeWhite" />

        <Button
            android:id="@+id/button_twitch_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to Twitich" />

        <Button
            android:id="@+id/button_giphy_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to Giphy" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:transitionName="logo"
        app:srcCompat="@drawable/favo_icon" />

</RelativeLayout>
