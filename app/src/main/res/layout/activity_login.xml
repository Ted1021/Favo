<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="taewon.navercorp.integratedsns.login.LoginActivity">

    <Button
        android:id="@+id/button_fb_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button_google_login"
        android:layout_centerHorizontal="true"
        android:text="Connect to Facebook" />


    <Button
        android:id="@+id/button_google_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button_insta_login"
        android:layout_alignStart="@+id/button_fb_login"
        android:layout_marginTop="4dp"
        android:text="Connect to Google" />

    <Button
        android:id="@+id/button_insta_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_google_login"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="4dp"
        android:text="Connect to Instagram" />

</RelativeLayout>
